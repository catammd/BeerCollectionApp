                <img src="{{image}}"  data-object-fit="cover" alt="">
            </div>
            <div class="c-card__text">
                <h2>
                    <a href="#card-link" aria-describedby="desc-a-card">{{linkText}}</a>
                </h2>
                <p>{{description}}</p>
                <span class="c-btn c-btn--primary" aria-hidden="true" id="desc-a-card">Read more â†’</span>
            </div>
        </li>
        {{/each}}
